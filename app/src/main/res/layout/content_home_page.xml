<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="0dp"
                android:src="@drawable/home1" />
            <Button android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    I'm tired and I wanna sleep     "
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/mybutton1"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="25dp"
                />
        </RelativeLayout>


        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="tips here"
            android:textColor="#444444"
            android:id="@+id/checkBox" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="tips here"
            android:textColor="#444444"
            android:id="@+id/checkBox2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Activity"
            android:layout_marginLeft="15dp"
            android:textColor="#444444"
            android:id="@+id/textView5" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="360dp"
                android:layout_height="245dp"
                android:src="@drawable/home2"
                android:layout_gravity="center_horizontal"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Check your sleep data "
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/textView6"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:shadowColor="#333333"
                android:shadowRadius="10.0"
                android:shadowDy="2.0"
                android:shadowDx="2.0"
                />
        </RelativeLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="360dp"
                android:layout_height="245dp"
                android:src="@drawable/home3"
                android:layout_gravity="center_horizontal"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Connect to your lamp"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:shadowColor="#333333"
                android:shadowRadius="10.0"
                android:shadowDy="2.0"
                android:shadowDx="2.0"
                />
        </RelativeLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="80dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="360dp"
                android:layout_height="245dp"
                android:src="@drawable/home4"
                android:layout_gravity="center_horizontal"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Record your sound"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/textView8"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:shadowColor="#333333"
                android:shadowRadius="10.0"
                android:shadowDy="2.0"
                android:shadowDx="2.0"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
