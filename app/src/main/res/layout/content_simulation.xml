<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="@color/colorPrimaryLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.sleeptight.ui.simulation.SimulationActivity"
    tools:showIn="@layout/activity_simulation">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sleep_icon"
        android:id="@+id/sleep_icon"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Our simulator Johnny is sleeping, you can back to homepage now."
        android:layout_marginTop="50dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/sleep_icon"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Back to Homepage      "
        android:id="@+id/back_button"
        android:textSize="22dp"
        android:textColor="#000044"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/backbutton"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
